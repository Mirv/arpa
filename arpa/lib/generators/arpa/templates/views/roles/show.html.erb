<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @role.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @role.description %>
</p>

<table>
  <div class="table-header">
    <div class="text-sm">
      <strong>List of Actions</strong>
    </div>
  </div>

  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @role.actions.each do |action| %>
      <tr>
        <td><%= action.name %></td>
        <td><%= action.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', roles_path %>
