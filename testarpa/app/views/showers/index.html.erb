<p id="notice"><%= notice %></p>

<h1>Showers</h1>

<table>
  <thead>
    <tr>
      <th>Welcomer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @showers.each do |shower| %>
      <tr>
        <td><%= shower.welcomer %></td>
        <td><%= link_to 'Show', shower %></td>
        <td><%= link_to 'Edit', edit_shower_path(shower) %></td>
        <td><%= link_to 'Destroy', shower, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

